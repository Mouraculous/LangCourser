@using ISBD_project.Resources
@model ISBD_project.Models.RegisterModel
@{
    ViewBag.Title = Shared.Register;
}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@Shared.NewAccount</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-2 control-label">@Shared.Username<font color="red">*</font></div>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LoginA, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LoginA, "", new { @class = "text-danger" })<br/>
            <div>
                @Html.Raw(TempData["WrongLogin"])
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">@Shared.Password<font color="red">*</font></div>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.PasswordA, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PasswordA, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">@Shared.RepeatPassword<font color="red">*</font></div>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RepeatedPasswordA, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RepeatedPasswordA, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">E-mail<font color="red">*</font></div>
        <div class="col-md-10">
            @Html.EditorFor(m => m.EmailU, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailU, "", new { @class = "text-danger" })<br/>
            <div>
                @Html.Raw(TempData["WrongEmail"])
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">@Shared.Name</div>
        <div class="col-md-10">
            @Html.EditorFor(m => m.NameU, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameU, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">@Shared.Surname</div>
        <div class="col-md-10">
            @Html.EditorFor(m => m.SurnameU, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SurnameU, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">@Shared.BirthDate<font color="red">*</font></div>
        <div class="col-md-10 input-group date" data-provide="datepicker">
            <input class="form-control text-box single-line" data-val="true" data-val-date="The field BirthDate must be a date." data-val-required="Pole Data urodzenia jest wymagane." id="BirthDate" name="BirthDate" textmode="Date" type="date" value="" />
            @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">@Shared.Gender<font color="red">*</font></div>
        <div class="col-md-10">
            @Html.EditorFor(m => m.GenderU, new { htmlAttributes = new { @class = "form-control", id="gender"} })
            @Html.ValidationMessageFor(model => model.GenderU, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value=@Shared.Accept />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
