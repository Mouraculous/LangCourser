@using ISBD_project.Resources
@model ISBD_project.Models.Users

@{
    ViewBag.Title = "Edit";
}

<h2>@Shared.Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Shared.User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idU)

        <div class="form-group">
            <div class="col-md-2 control-label">@Shared.Name</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nameU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nameU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">@Shared.Surname</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.surnameU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.surnameU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">@Shared.Email</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.emailU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.emailU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">@Shared.Age</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ageU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ageU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">@Shared.Gender</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.genderU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.genderU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">@Shared.Id</div>
            <div class="col-md-10">
                @Html.DropDownList("idUA", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idUA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Shared.Accept" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Shared.Back, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
