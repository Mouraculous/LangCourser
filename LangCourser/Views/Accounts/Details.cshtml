@using ISBD_project.Resources
@model ISBD_project.Models.Account

@{
    ViewBag.Title = "Details";
}

<h2>@Shared.Details</h2>

<div>
    <h4>@Shared.Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-md-2 control-label">@Shared.Name</dt>

        <dd>
            @Html.DisplayFor(model => model.Users.nameU)
        </dd>

        <dt class="col-md-2 control-label">@Shared.Username</dt>

        <dd>
            @Html.DisplayFor(model => model.loginA)
        </dd>

        <dt class="col-md-2 control-label">@Shared.Password</dt>

        <dd>
            @Html.DisplayFor(model => model.passwordA)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(Shared.Edit, "Edit", new { id = Model.idA }) |
    @Html.ActionLink(Shared.Back, "Index")
</p>
