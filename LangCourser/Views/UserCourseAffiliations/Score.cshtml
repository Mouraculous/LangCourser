@using ISBD_project.Resources
@using ISBD_project.Session
@model ISBD_project.Models.UserCourseAffiliation

@{
    ViewBag.Title = "Score";
}

<h2>@Shared.Score</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idU)

        @Html.HiddenFor(model => model.idC)

        <div class="form-group">
            <div class="col-md-2 control-label">@Shared.Grade</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.scoreUCA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.scoreUCA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="@Shared.Save"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Shared.Back, "MyCourses", "Courses", routeValues: new { id = int.Parse(Request.Cookies.Get(Strings.AccountId).Value) }, htmlAttributes: null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
